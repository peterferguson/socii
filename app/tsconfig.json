{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@alpaca/*": ["alpaca/*"],
      "@stream/*": ["stream/*"],
      "@contexts/*": ["contexts/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@public/*": ["public/*"],
      "@icons/*": ["public/icons/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "custom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.tsx",
    "components/stream/MessagingInput/MessagingInput.jsx",
    "pages/api/commands.js",
    "components/stream/Chat.jsx",
    "components/stream/MessagingChannelPreview.tsx",
    "stream/components/Chat.jsx",
    "pages/api/alpaca/requests/test.rest.ts"
  ],
  "exclude": ["node_modules"]
}
