{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/*"],
      "@tests/*": ["__tests__/*"],
      "@hooks": ["hooks/index"],
      "@hooks/*": ["hooks/*"],
      "@alpaca/*": ["alpaca/*"],
      "@alpaca": ["alpaca/index"],
      "@stream": ["stream/index"],
      "@stream/*": ["stream/*"],
      "@contexts/*": ["contexts/*"],
      "@contexts": ["contexts/index"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index"],
      "@pages/*": ["pages/*"],
      "@public/*": ["public/*"],
      "@icons/*": ["public/icons/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "custom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
